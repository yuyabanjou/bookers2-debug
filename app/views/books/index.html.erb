<div class="row">
	<div class="col-xs-3">

		<!-- エラーメッセージ表示-->
		<% if @book.errors.any? %>
			<h3><%= @book.errors.count %>error occurrence</h3><!--エラーメッセ-->
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
		<!-- エラーメッセージ表示-->

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
					<td>
					<% if book.favorited_by?(current_user) %>
						<%= link_to(book_favorites_path(book.id,iine: 'index'), method: :delete) do %>
							<span class="fa fa-heart" style="color: red;"></span>
							<span><%= book.favorites.count %></span>
						<% end %>
					<% else %>
						<%= link_to(book_favorites_path(book,iine: 'index'), method: :post) do %>
							<span class="fa fa-heart-o" ></span>
							<span><%= book.favorites.count %></span>
						<% end %>
					<% end %>
					</td>
					<td>
						<span>コメント数：</span>
						<span><%= book.book_comments.count %></span>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<!--books一覧 -->


	</div>
</div>